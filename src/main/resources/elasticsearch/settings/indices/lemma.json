{
  "index": {
    "max_result_window": 100000,
    "number_of_shards": "1",
    "number_of_replicas": "0",
    "search": {
      "slowlog": {
        "threshold": {
          "query": {
            "debug": "0s"
          }
        }
      }
    },
    "analysis": {
      "tokenizer": {
        "hieroglyph_tokenizer": {
          "type": "char_group",
          "tokenize_on_chars": [
            "whitespace",
            "-",
            ":",
            "/",
            "*",
            "^",
            "&"
          ]
        }
      },
      "char_filter": {
        "transcription_brackets_filter": {
          "type": "pattern_replace",
          "pattern": "[\\(\\)\\[\\]⸢⸮?⸣]|\\{\\S*\\}",
          "replacement": ""
        },
        "transcription_suffix_filter": {
          "type": "mapping",
          "mappings": [
            ",t,pl => ,wt",
            ",tpl => ,wt",
            "t,du => ,tj",
            ",tdu => ,tj",
            "du => wj",
            "pl => w",
            ",  => ."
          ]
        }
      },
      "analyzer": {
        "transcription_analyzer": {
          "type": "custom",
          "tokenizer": "whitespace",
          "char_filter": [
            "transcription_brackets_filter",
            "transcription_suffix_filter"
          ]
        },
        "hieroglyph_analyzer": {
          "type": "custom",
          "tokenizer": "hieroglyph_tokenizer"
        }
      }
    }
  }
}
